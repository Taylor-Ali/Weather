<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Weather" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/sunny</item>
        <item name="colorPrimaryVariant">@color/cloudy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rainy</item>
        <item name="colorSecondaryVariant">@color/cloudy</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>

    </style>

    <style name="Theme.Weather" parent="Base.Theme.Weather" />
    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface" >
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>
